FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o /scheduler cmd/scheduler/main.go

FROM alpine:latest
RUN apk --no-cache add ca-certificates

WORKDIR /root/
COPY --from=builder /scheduler .
COPY config/scheduler.yaml ./config/

EXPOSE 8080 50051
CMD ["./scheduler", "--config", "config/scheduler.yaml"]
